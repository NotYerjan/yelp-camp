<% layout('layouts/boilerplate') %>
<div id="cluster-map" class="mb-5"></div>
    <h1 class="text-center">All Campgrounds</h1>
    <% for(let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (!campground.images.length) { %>
                        <img src="https://res.cloudinary.com/yerjan/image/upload/v1650380030/YelpCamp/ufmgw5qdwlvfjb4wpfp5.jpg" class="img-fluid img-box" alt="<%= campground.title %>">
                        <% } else { %>
                        <img src="<%= campground.images[0].url %>" class="img-fluid img-box" alt="<%= campground.title %>">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <h6 class="card-title text-muted">
                            <%= campground.location %>
                        </h6>
                        <p class="card-text">
                            <%= campground.description.substring(0,200) %>...
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More</a>
                    </div>
                </div>
            </div> 
        </div>
        <% } %>
    
<script>
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>